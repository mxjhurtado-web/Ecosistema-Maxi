# Environment Variables - Example Configuration
# Copy this file to .env and update with your values

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_VERSION=1.0.0

# MCP Settings
MCP_URL=http://localhost:8080/query
MCP_TIMEOUT=5
MCP_MAX_RETRIES=3
MCP_RETRY_DELAY=1

# Security
WEBHOOK_SECRET=change-me-in-production-use-strong-secret
RATE_LIMIT_PER_MINUTE=100

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Cache
CACHE_ENABLED=true
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# Circuit Breaker
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_FAILURE_THRESHOLD=5
CIRCUIT_TIMEOUT=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Dashboard
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=change-me-in-production
