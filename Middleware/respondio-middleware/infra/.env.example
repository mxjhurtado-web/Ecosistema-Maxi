# Environment variables for Docker Compose
# Copy this to .env in the infra/ directory

# Security (CHANGE THESE IN PRODUCTION!)
WEBHOOK_SECRET=your-super-secret-webhook-key-change-me
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=your-super-secret-dashboard-password

# MCP Settings (for production)
MCP_URL=http://your-mcp-server:8080/query
MCP_TIMEOUT=5
MCP_MAX_RETRIES=3
MCP_RETRY_DELAY=1

# Redis (optional)
REDIS_PASSWORD=

# Cache
CACHE_ENABLED=true
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# Circuit Breaker
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_FAILURE_THRESHOLD=5
CIRCUIT_TIMEOUT=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
