# Environment Configuration
# Copy this file to .env and fill in your values

# Application
APP_NAME=MAX
APP_ENV=development
DEBUG=True
API_V1_PREFIX=/api/v1

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql+asyncpg://max_user:max_password@localhost:5432/max_db

# Redis
REDIS_URL=redis://localhost:6379/0

# Security (Legacy - not used with Keycloak)
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=480

# Keycloak Authentication (SSO)
KEYCLOAK_URL=http://localhost:8081
KEYCLOAK_REALM=maxibot
KEYCLOAK_CLIENT_ID=maxibot-client
KEYCLOAK_CLIENT_SECRET=maxibot-secret-123
KEYCLOAK_VERIFY_SIGNATURE=False
KEYCLOAK_VERIFY_AUD=False

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# WhatsApp Cloud API
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_ACCESS_TOKEN=your-access-token
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token

# Chat App
CHAT_APP_API_URL=https://your-chat-app-api.com
CHAT_APP_API_KEY=your-chat-app-api-key

# External Integrations
TICKETING_API_URL=https://your-ticketing-system.com/api
TICKETING_API_KEY=your-ticketing-api-key

TRANSACTION_API_URL=https://your-transaction-system.com/api
TRANSACTION_CLIENT_ID=your-client-id
TRANSACTION_CLIENT_SECRET=your-client-secret

# Storage (CloudFlare R2 or Google Cloud Storage)
STORAGE_TYPE=cloudflare_r2
STORAGE_BUCKET=max-media
STORAGE_ACCOUNT_ID=your-account-id
STORAGE_ACCESS_KEY=your-access-key
STORAGE_SECRET_KEY=your-secret-key

# Monitoring
GRAFANA_CLOUD_API_KEY=your-grafana-api-key

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Rate Limiting
RATE_LIMIT_MESSAGES_PER_MINUTE=20
RATE_LIMIT_CONVERSATIONS_PER_HOUR=5
