# Server Configuration
BACKEND_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000

# Keycloak SSO (reuses MaxiBot configuration)
KEYCLOAK_URL=https://sso.maxilabs.net/auth
KEYCLOAK_REALM=zeusDev
KEYCLOAK_CLIENT_ID=athenas-lite-web
KEYCLOAK_CLIENT_SECRET=your_client_secret_here
KEYCLOAK_REDIRECT_URI=http://localhost:3000/auth/callback

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_here_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# File Handling
MAX_FILE_SIZE_MB=50
TEMP_AUDIO_DIR=./temp_audio
AUTO_CLEANUP_MINUTES=60

# Database
DATABASE_PATH=./data/athenas_history.db

# Google Drive Integration (preserves existing functionality)
GOOGLE_DRIVE_FOLDER_ID=your_folder_id_here
GOOGLE_CREDENTIALS_PATH=./credentials.json

# Gemini API (optional, can be configured per-user)
GEMINI_API_KEY=

# Deployment (for internal use)
ENVIRONMENT=development
LOG_LEVEL=INFO
